{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "camelcase": [
            "error",
            {
                "properties": "always"
            }
        ],
        "no-unused-vars": [
            "off"
        ],
        "no-redeclare": [
            "off"
        ]
    }
}